{% extends 'base.html.twig' %}

{% block title %}Proveedor index{% endblock %}

{% block navbar_active_proveedores %}active{% endblock %}

{% block body %}
    <h1>Proveedor index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for proveedor in proveedors %}
            <tr>
                <td>{{ proveedor.id }}</td>
                <td>{{ proveedor.nombre }}</td>
                <td>
                    <a href="{{ path('app_proveedor_show', {'id': proveedor.id}) }}">show</a>
                    <a href="{{ path('app_proveedor_edit', {'id': proveedor.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_proveedor_new') }}">Create new</a>
{% endblock %}
